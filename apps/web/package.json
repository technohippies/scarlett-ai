    "@tanstack/solid-query": "^5.80.6",
    "@unlock-protocol/paywall": "^0.8.1",
    "@unlock-protocol/unlock-js": "^0.51.2",
    "ethers": "6",
    "solid-js": "^1.9.7",
    "viem": "^2.31.0"
