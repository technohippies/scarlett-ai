{
  "name": "@scarlett/server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --env development --local",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "docs:generate": "tsx scripts/generate-openapi.ts",
    "docs:serve": "npx @redocly/cli preview-docs openapi.yaml",
    "db:migrate": "wrangler d1 execute scarlett-dev --file=./schema/migrations/001_initial.sql",
    "db:migrate:prod": "wrangler d1 execute scarlett-prod --env production --file=./schema/migrations/001_initial.sql"
  },
  "dependencies": {
    "hono": "^4.6.12",
    "@hono/zod-validator": "^0.4.1",
    "zod": "^3.24.1",
    "lrclib-api": "^1.0.0",
    "double-metaphone": "^2.0.1",
    "jose": "^5.9.6",
    "ts-fsrs": "^4.2.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.3",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@eslint/js": "^9.28.0",
    "@scalar/hono-api-reference": "^0.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.16.0",
    "js-yaml": "^4.1.0",
    "miniflare": "^3.0.0",
    "msw": "^2.7.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "4"
  }
}
