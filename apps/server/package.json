{
  "name": "@scarlett/server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "db:migrate": "wrangler d1 execute scarlett-dev --file=./schema/migrations/001_initial.sql",
    "db:migrate:prod": "wrangler d1 execute scarlett-prod --env production --file=./schema/migrations/001_initial.sql"
  },
  "dependencies": {
    "hono": "^4.6.12",
    "@hono/zod-validator": "^0.4.1",
    "zod": "^3.24.1",
    "lrclib-api": "^1.0.0",
    "double-metaphone": "^2.0.1",
    "jose": "^5.9.6",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@scarlett/eslint-config": "workspace:*",
    "@scarlett/typescript-config": "workspace:*",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "wrangler": "4"
  }
}