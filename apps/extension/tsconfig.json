{
  "extends": "@scarlett/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@scarlett/ui": ["../../packages/ui/src/index.ts"],
      "@scarlett/ui/*": ["../../packages/ui/src/*"]
    },
    "types": ["chrome", "webextension-polyfill"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    "src/**/*",
    "entrypoints/**/*",
    "wxt.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}